# Sentinel - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# ANTHROPIC CLAUDE API
# ============================================================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Model configuration
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7

# ============================================================================
# SLACK CONFIGURATION
# ============================================================================
# Create a Slack app at: https://api.slack.com/apps
# Enable Socket Mode and install to your workspace

SLACK_BOT_TOKEN=xoxb-xxxxx
SLACK_APP_TOKEN=xapp-xxxxx
SLACK_SIGNING_SECRET=xxxxx

# Slack bot configuration
SLACK_BOT_NAME=Sentinel
SLACK_BOT_EMOJI=:robot_face:

# Notification channel (where heartbeat alerts are sent)
SLACK_NOTIFICATION_CHANNEL=#sentinel-alerts

# ============================================================================
# GOOGLE WORKSPACE APIs
# ============================================================================
# Set up Google Cloud project: https://console.cloud.google.com/
# Enable Gmail API and Google Calendar API

# Path to your OAuth credentials JSON file
GOOGLE_CREDENTIALS_PATH=./config/google_credentials.json
GOOGLE_TOKEN_PATH=./config/google_token.json

# Gmail settings
GMAIL_IMPORTANT_SENDERS=boss@company.com,client@important.com

# Calendar settings
CALENDAR_PREP_WARNING_MINUTES=60

# ============================================================================
# ASANA API
# ============================================================================
# Get your personal access token: https://app.asana.com/0/my-apps
ASANA_ACCESS_TOKEN=xxxxx
ASANA_WORKSPACE_GID=xxxxx

# ============================================================================
# MEMORY SYSTEM CONFIGURATION
# ============================================================================
# Path to your Obsidian vault (optional, for local editing)
OBSIDIAN_VAULT_PATH=

# Database path
SQLITE_DB_PATH=./memory/sentinel.db

# Memory settings
MEMORY_MAX_SESSION_LENGTH=1000  # Max messages per session before rotation
MEMORY_DAILY_LOG_RETENTION_DAYS=90  # How long to keep daily logs

# ============================================================================
# HEARTBEAT CONFIGURATION
# ============================================================================
# How often to run the heartbeat loop (in minutes)
HEARTBEAT_INTERVAL_MINUTES=30

# Enable/disable individual monitors
HEARTBEAT_ENABLE_GMAIL=true
HEARTBEAT_ENABLE_CALENDAR=true
HEARTBEAT_ENABLE_ASANA=true
HEARTBEAT_ENABLE_SLACK=true

# Notification settings
NOTIFICATION_DND_START=22:00  # Do not disturb start (10 PM)
NOTIFICATION_DND_END=08:00    # Do not disturb end (8 AM)

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE_PATH=./logs/sentinel.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================
DEBUG_MODE=false
ENABLE_TESTING_MODE=false
